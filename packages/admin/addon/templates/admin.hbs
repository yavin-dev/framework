      <Tabs.LinkToTab class="navi-admin__tab-item" @route={{tabItem.route}}>
        {{tabItem.title}}
      </Tabs.LinkToTab>
    {{/each}}
  </DenaliTabs>
  <div class="navi-admin__content">
    {{outlet}}
  </div>
</div>