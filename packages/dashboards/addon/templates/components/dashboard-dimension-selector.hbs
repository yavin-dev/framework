<div
  class="dashboard-dimension-selector"
  ...attributes
>
  {{#if (is-fulfilled this.groupedDimensions)}}
    <PowerSelect
      @searchEnabled={{true}}
      @options={{await this.groupedDimensions}}
      @onChange={{@onChange}}
      @searchField="name"
      @placeholder="Dimension"
      @searchPlaceholder="Search"
      @triggerClass="is-medium"
      as |dimension|
    >
      <div title="Data Source: {{dimension.source}}, Table(s): {{join ", " dimension.tables}}">
        {{dimension.name}}
      </div>
    </PowerSelect>
  {{/if}}
</div>