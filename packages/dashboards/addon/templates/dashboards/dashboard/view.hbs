<NaviDashboard
  @dashboard={{@model.dashboard}}
  @taskByWidget={{@model.taskByWidget}}
  @saveAction={{route-action "saveDashboard"}}
  @deleteAction={{item-action "DELETE_ITEM" @model.dashboard}}
  @onUpdateFilter={{this.updateFilter}}
  @onRemoveFilter={{this.removeFilter}}
  @onAddFilter={{this.addFilter}}
  @onModelSaveOrRevert={{this.clearFilterQueryParams}}
  {{!-- template-lint-disable no-action --}}
  {{!-- TODO: Replace mixin --}}
  @addWidgetToDashboard={{action "addToDashboard"}}
  @width={{@model.dashboard.presentation.columns}}
/>
