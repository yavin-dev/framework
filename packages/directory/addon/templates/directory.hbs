<main class='directory'>
  
  <div class='directory__new-button'>
    {{dir-new-button classNames='directory__new-button'}}
  </div>
  
  <section class='directory__controls'>
    {{dir-search-bar 
      classNames='directory__search' 
      query=q 
      searchFor=(action 'searchFor')
    }}

    {{dir-table-filter
      classNames='directory__table-filter'
      selectedType=type
      updateQueryParams=(route-action 'updateQueryParams')
    }}
  </section>
  
  {{dir-sidebar classNames='directory__sidebar'}}

  <section class='directory__table'>
    {{outlet}}
  </section>

</main>
