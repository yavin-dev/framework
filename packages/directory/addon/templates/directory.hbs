<main class="directory">

  <div class="directory__new-button">
    <DirNewButton class="directory__new-button" />
  </div>

  <section class="directory__controls">
    <DirSearchBar
      class="directory__search"
      @query={{this.q}}
      @searchFor={{action "searchFor"}}
    />

    <DirTableFilter
      class="directory__table-filter"
      @selectedType={{this.type}}
      @updateQueryParams={{action "updateQueryParams"}}
    />
  </section>

  <DirSidebar class="directory__sidebar"/>

  <section class="directory__table">
    <div class="directory__table-header">
      <h1>{{this.title}}</h1>
    </div>
    {{outlet}}
  </section>

</main>
