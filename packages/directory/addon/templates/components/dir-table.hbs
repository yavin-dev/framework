{{#light-table table
  classNames='dir-table'
  responsive=true
  occlusion=true
  estimatedRowHeight=40
  as |t|
}}
  {{t.head
    is-sortable=false
    fixed=true
  }}

  {{#t.body 
    canSelect=false
    as |body|
  }}
    {{#if isLoading}}
      {{#body.loader}}
        {{navi-loader}}
      {{/body.loader}}

    {{else}}
      
      {{#if table.isEmpty}}
        {{#body.no-data}}
          
          {{#if isSearching}}
            
            {{#navi-info-message}}
              <div class='dir-table__info-message--text'>
                None of your files or folders match <span class='dir-table__info-message--query'>{{searchQuery}}</span>.
              </div>
              <div class='dir-table__info-message--subtext'>Please try a different search.</div>
            {{/navi-info-message}}
         
          {{else}}
          
            {{#navi-info-message}}
              Nothing to see here.
            {{/navi-info-message}}
          
          {{/if}}
        {{/body.no-data}}
      {{/if}}  

    {{/if}}
    
  {{/t.body}}
{{/light-table}}
