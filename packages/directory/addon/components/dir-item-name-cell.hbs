{{#if @value.isFavorite}}
  <DenaliIcon
    class="link m-x-5"
    @icon="star-solid"
    @size="small"
    {{on "click" (fn this.toggleFavorite @value.isFavorite)}}
  />
{{else}}
  <DenaliIcon
    class="link m-x-5"
    @icon="star"
    @size="small"
    {{on "click" (fn this.toggleFavorite @value.isFavorite)}}
  />
{{/if}}

<LinkTo @route={{this.itemLink}} @model={{this.itemId}} class="dir-item-name-cell">
  <span>{{@value.title}}</span>
</LinkTo>

{{#if @value.tempId}}
  <DenaliChip
    @size="small"
    @backgroundColor="grey"
    @backgroundShade="300"
    @textColor="grey"
    @textShade="700"
    class="dir-item-name-cell__unsaved-label"
  >
    UNSAVED
  </DenaliChip>
{{/if}}