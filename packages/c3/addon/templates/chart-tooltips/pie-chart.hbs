<div class="chart-tooltip__title">
  {{await this.metric.displayNiceName}}
  ({{if this.requiredToolTipData.ratio (format-number this.requiredToolTipData.ratio style="percent") "--"}})
</div>
<hr class="chart-tooltip__break">
<table class="chart-tooltip__table">
  <tbody>
    <tr class="chart-tooltip__series">
      <td class="chart-tooltip__indicator"><svg><circle cx="50%" cy="50%" r="40%" class="chart-series-{{this.requiredToolTipData.seriesIndex}}"/></svg></td>
      <td class="chart-tooltip__name">{{this.requiredToolTipData.name}}</td>
      <td class="chart-tooltip__value">{{tooltip-value-formatter this.requiredToolTipData.value this.metric this.rowData}}</td>
    </tr>
  </tbody>
</table>
