{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "baseUrl": "./src",

    "rootDir": "src",

    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["src"]
}
