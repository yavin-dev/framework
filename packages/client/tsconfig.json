{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": ["ESNext"],

    "incremental": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "moduleResolution": "node",
    "baseUrl": "./src",

    "rootDir": "src"
  },
  "include": ["src"]
}
