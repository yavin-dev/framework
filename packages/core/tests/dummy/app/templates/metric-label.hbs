<div class="metric-label__container">
  <NaviVisualizations::MetricLabel
    @model={{@model.hp}}
    @options={{hash format=undefined metricCid=@model.hp.firstObject.request.metricColumns.0.cid}}
  />
  <NaviVisualizations::MetricLabel
    @model={{@model.magic}}
    @options={{hash format=undefined metricCid=@model.magic.firstObject.request.metricColumns.0.cid}}
  />
  <NaviVisualizations::MetricLabel
    @model={{@model.rupees}}
    @options={{hash format="$0,0[.]00" metricCid=@model.rupees.firstObject.request.metricColumns.0.cid}}
  />
  <NaviVisualizations::MetricLabel
    @model={{@model.arrows}}
    @options={{hash format="$0,0[.]00" metricCid=@model.arrows.firstObject.request.metricColumns.0.cid}}
  />
  <NaviVisualizationConfig::Wrapper
    @request={{@model.bottle.firstObject.request}}
    @response={{@model.bottle.firstObject.response}}
    @manifest={{this.manifest}}
    @settings={{this.metricVisualization.metadata}}
    @onUpdateSettings={{this.onUpdateConfig}}
  />
  <NaviVisualizations::MetricLabel
    @model={{@model.bottle}}
    @options={{this.metricLabelOptions}}
  />
</div>
