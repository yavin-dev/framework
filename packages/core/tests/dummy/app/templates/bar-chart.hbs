<h3>Apex Bar Chart</h3>
<NaviVisualizations::ApexBar
    @model={{this.model}}
    @options={{this.metricOptions}}
  />

<h3>By Metric</h3>
<div class="chart-container">
  <NaviVisualizationConfig::Wrapper
    @request={{this.request}}
    @response={{this.response}}
    @visualization={{this.metricVisualization}}
    @onUpdateConfig={{fn (mut this.metricOptions)}}
  />
  <NaviVisualizations::BarChart
    @model={{this.model}}
    @options={{this.metricOptions}}
  />
</div>

<h3>Hours by Day</h3>
<NaviVisualizations::BarChart
  @model={{this.hourGrainModel}}
  @options={{this.hourByDayTimeOptions}}
/>

<h3>By Dimension</h3>
<div class="chart-container">
  <NaviVisualizationConfig::Wrapper
    @request={{this.request}}
    @response={{this.response}}
    @visualization={{this.dimVisualization}}
    @onUpdateConfig={{this.onUpdateConfig}}
  />
  <NaviVisualizations::BarChart
    @model={{this.model}}
    @options={{this.dimensionOptions}}
  />
</div>
