<h3>By Metric</h3>

<div class="chart-container">
  <NaviVisualizationConfig::Wrapper
    @request={{this.model.default.0.request}}
    @response={{this.model.default.0.response}}
    @manifest={{this.manifest}}
    @settings={{this.metricVisualization.metadata}}
    @onUpdateSettings={{fn (mut this.metricOptions)}}
  />
  <NaviVisualizations::BarChart
    @model={{this.model.default}}
    @options={{this.metricOptions}}
  />
</div>

<h3>Hours by Day</h3>
<NaviVisualizations::BarChart
  @model={{this.model.hourGrain}}
  @options={{this.hourByDayTimeOptions}}
/>

<h3>By Dimension</h3>
<div class="chart-container">
  <NaviVisualizationConfig::Wrapper
    @request={{this.model.dimension.0.request}}
    @response={{this.model.dimension.0.response}}
    @manifest={{this.manifest}}
    @settings={{this.dimVisualization.metadata}}
    @onUpdateSettings={{this.onUpdateConfig}}
  />
  <NaviVisualizations::BarChart
    @model={{this.model.dimension}}
    @options={{this.dimensionOptions}}
  />
</div>
