<div class="goal-gauge-config">
  <div class="goal-gauge-config__section-header">
    Label
  </div>
  <div class="goal-gauge-config__description goal-gauge-config__section">
    {{input
      autofocus=false
      class="goal-gauge-config__text-input goal-gauge-config__label-input"
      name="metric-description-input"
      type="text"
      value=(readonly options.metricTitle)
      focus-out=(action "updateConfig" "metricTitle")
      key-up=(action "updateConfig" "metricTitle")
      placeholder=(metric-format (serialize metricModel))
    }}
  </div>
  <div class="goal-gauge-config__section-header">
    Baseline
  </div>
  <div class="goal-gauge-config__format goal-gauge-config__section">
    {{input
      autofocus=false
      class="goal-gauge-config__baseline-input goal-gauge-config__text-input"
      name="baseline-input"
      type="number"
      maxlength="22"
      placeholder="Baseline Value"
      value=(readonly options.baselineValue)
      focus-out=(action "updateConfig" "baselineValue")
      key-up=(action "updateConfig" "baselineValue")
    }}
  </div>
  <div class="goal-gauge-config__section-header">
    Goal
  </div>
  <div class="goal-gauge-config__format goal-gauge-config__section">
    {{input
      autofocus=false
      class="goal-gauge-config__goal-input goal-gauge-config__text-input"
      name="goal-input"
      type="number"
      maxlength="22"
      placeholder="Goal Value"
      value=(readonly options.goalValue)
      focus-out=(action "updateConfig" "goalValue")
      key-up=(action "updateConfig" "goalValue")
    }}
  </div>
</div>
