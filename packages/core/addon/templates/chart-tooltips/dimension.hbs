<div class="chart-tooltip-title">{{format-chart-tooltip-date this.request this.x}}</div>
{{#let (find-by "cid" this.seriesConfig.metricCid this.request.columns) as |metric|}}
  <div class="sub-title">{{metric.displayName}}</div>
  <ol class="hover-dimensions">
    {{#each this.tooltipData as |series|}}
      <li class="metric-val">
        <svg class="series-indicator">
          <circle cx="50%" cy="50%" r="40%" class="chart-series-{{series.seriesIndex}}"/>
        </svg>
        <span>{{tooltip-value-formatter series.value metric.displayName (object-at series.seriesIndex this.rowData)}}</span>
      </li>
    {{/each}}
  </ol>
{{/let}}
