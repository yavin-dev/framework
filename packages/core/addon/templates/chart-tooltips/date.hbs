<div class="chart-tooltip__title">{{this.request.timeGrain}} {{this.x}}</div>
{{#let (find-by "cid" this.seriesConfig.metricCid this.request.columns) as |metric|}}
  <div class="chart-tooltip__sub-title">{{metric.displayName}}</div>
  <hr class="chart-tooltip__break">
  <table class="chart-tooltip__table">
    <tbody>
      {{#each this.tooltipData as |series|}}
        <tr class="chart-tooltip__series">
          <td class="chart-tooltip__indicator"><svg><circle cx="50%" cy="50%" r="40%" class="chart-series-{{series.seriesIndex}}"/></svg></td>
          <td class="chart-tooltip__name">{{series.name}}</td>
          <td class="chart-tooltip__value">{{tooltip-value-formatter series.value metric.displayName (object-at series.seriesIndex this.rowData)}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/let}}