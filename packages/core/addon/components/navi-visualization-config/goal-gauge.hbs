<div class="goal-gauge-config" ...attributes>

   <DenaliInputGroup
     @label="Goal Label"
     @isStacked={{true}}
     class="goal-gauge-config__section-header m-b-30"
   >
    <DenaliInput
      @size="medium"
      type="text"
      class="goal-gauge-config__label-input"
      placeholder={{this.metricColumn.displayName}}
      value={{this.metricColumn.alias}}
      {{on "input" (pipe (pick "target.value") (fn this.updateLabel))}}
    />
  </DenaliInputGroup>

  <DenaliInputGroup
    @label="Baseline"
    @isStacked= {{true}}
    class="goal-gauge-config__section-header m-b-30"
  >
    <DenaliInput
      @size="medium"
      step="any"
      type="number"
      maxlength="22"
      class="goal-gauge-config__baseline-input"
      placeholder="Baseline Value"
      value={{@options.baselineValue}}
      {{on "input" (pipe (pick "target.value") (fn this.updateBaseline))}}
    />
  </DenaliInputGroup>

  <DenaliInputGroup
    @label="Goal"
    @isStacked= {{true}}
    class="goal-gauge-config__section-header m-b-30"
  >
    <DenaliInput
      @size="medium"
      step="any"
      type="number"
      maxlength="22"
      class="goal-gauge-config__goal-input"
      placeholder="Goal Value"
      value={{@options.goalValue}}
      {{on "input" (pipe (pick "target.value") (fn this.updateGoal))}}
    />
  </DenaliInputGroup>
</div>
