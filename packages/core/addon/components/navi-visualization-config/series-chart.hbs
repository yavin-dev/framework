<div class="series-chart-config" ...attributes>
  {{#if this.showMetricSelect}}
    <div class="metric-select">
      <DenaliInputGroup @label="Metric" class="metric-select__select m-b-30">
        <PowerSelect
          @options={{@request.metricColumns}}
          @selected={{this.selectedMetric}}
          @searchEnabled={{false}}
          @onChange={{this.onUpdateChartMetric}}
          @triggerClass="metric-select__select-trigger w-full"
          as |metric|
        >
          {{metric.displayName}}
        </PowerSelect>
      </DenaliInputGroup>
    </div>
  {{/if}}
  {{yield}}
</div>