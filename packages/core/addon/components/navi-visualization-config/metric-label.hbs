<div class="metric-label-config" ...attributes>
  <DenaliInputGroup
    @label="Label"
    @isStacked={{true}}
    class="metric-label-config__section-header"
  >
    <DenaliInput
      @size="medium"
      type="text"
      class="metric-label-config__label-input"
      placeholder="No Label"
      value={{this.metricColumn.displayName}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateLabel))}}
    />
  </DenaliInputGroup>
  <NumberFormatSelector @format={{@options.format}} @onUpdateFormat={{this.updateFormat}} />
</div>
