<div class="table-cell-content table-cell--total" ...attributes>
  {{get-shallow @data @column.fragment.canonicalName}}
  {{#if @data.__meta__.hasPartialData}}
    <div class="table-cell__info-message">
      <NaviIcon @icon="exclamation-triangle" class="table-cell__info-message--icon" />
      <EmberTooltip class="table-cell__info-message--tooltip" @side="right" @enableLazyRendering={{true}}>
        Totals and Subtotals are not calculated when data is partially loaded
      </EmberTooltip>
    </div>
  {{/if}}
</div>