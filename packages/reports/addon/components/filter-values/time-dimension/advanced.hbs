{{#if @isCollapsed}}
  {{#if this.interval}}
    {{this.dateRange}}
  {{else}}
    <FilterValues::InvalidValue />
  {{/if}}
{{else}}
  <div class="filter-values--advanced-interval-input row" ...attributes>
    <DenaliInput
      @wrapperClass="col-3-7"
      @size="medium"
      @state={{unless this.isIntervalValid "error"}}
      @errorMsg={{unless this.isIntervalValid "Invalid interval"}}
      placeholder={{this.startPlaceholder}}
      class="filter-values--advanced-interval-input--start"
      value={{this.start}}
      {{on "input" (pipe (pick "target.value") (fn (mut this.start)))}}
      {{on "focusout" this.commitValues}}
    />
    <span class="filter-values--advanced-interval-input__separator col-1-7 flex align-items-center justify-content-center">and</span>
    <DenaliInput
      @wrapperClass="col-3-7"
      @size="medium"
      @state={{unless this.isIntervalValid "error"}}
      @errorMsg={{unless this.isIntervalValid "Invalid interval"}}
      placeholder={{this.endPlaceholder}}
      class="filter-values--advanced-interval-input--end"
      value={{this.end}}
      {{on "input" (pipe (pick "target.value") (fn (mut this.end)))}}
      {{on "focusout" this.commitValues}}
    />
  </div>
{{/if}}