{{#if @isCollapsed}}
  {{#if @filter.validations.attrs.values.isInvalid}}
    <FilterValues::InvalidValue/>
  {{else}}
    <span ...attributes>{{this.value}}</span>
  {{/if}}
{{else}}
  <DenaliInput
    @wrapperClass="filter-values-input"
    value={{this.value}}
    placeholder="Value"
    @size="medium"
    @state={{if @filter.validations.attrs.values.isInvalid "error"}}
    class="filter-values--value-input"
    {{on "input" this.setValue}}
  />
{{/if}}
