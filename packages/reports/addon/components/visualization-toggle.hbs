<div class="visualization-toggle" ...attributes>
  <DenaliToggle
    @options={{@validVisualizations}}
    @activeOption={{this.activeVisualization}}
    @onChange={{@onVisualizationTypeUpdate}}
    @isSmall={{true}}
    as |visualization|
  >
    <DenaliIcon 
      @icon={{visualization.icon}} 
      @size="small"
      class="visualization-toggle__option-icon {{if (eq this.activeVisualization visualization  ) "visualization-toggle__option--is-active"}}" 
      title={{visualization.niceName}}
    />
  </DenaliToggle>
</div>