<span class="filter-dimension--collapsed">{{await @filter.displayNiceName}}</span>
<span class="filter-operator--collapsed">{{lowercase @selectedValueBuilder.name}}</span>
<strong>
  {{#let (component @selectedValueBuilder.component) as |FilterValue|}}
    <FilterValue
      class="filter-values--collapsed"
      @tagName="span"
      @filter={{@filter}}
      @request={{@request}}
      @isCollapsed={{true}}
    />
  {{/let}}
</strong>
