<div class="navi-email-input" ...attributes>
  <NaviTagInput
    @tags={{readonly @emails}}
    @addTag={{this.addEmail}}
    @removeTagAtIndex={{this.removeEmailAtIndex}}
    @tagComponent="navi-email-tag"
    @readOnly={{@isDisabled}}
    @splitOnPaste={{true}}
    @alwaysUseSplit={{true}}
    as |email|
  >
    {{email}}
  </NaviTagInput>
</div>
