<div class="navi-column-config-base__option navi-column-config-item__parameter">
  <label for="navi-column-config-item-datetime-timegrain" class="navi-column-config-item__parameter-label navi-column-config-base__option-label">
    Time Grain
  </label>
  <PowerSelect
    @triggerClass="navi-column-config-item__parameter-trigger navi-column-config-base__option-input"
    @triggerId="navi-column-config-item-datetime-timegrain"
    @dropdownClass="navi-column-config-item__parameter-dropdown"
    @searchEnabled={{false}}
    @options={{@column.timeGrains}}
    @selected={{find-by 'id' @column.timeGrain @column.timeGrains}}
    @onchange={{this.updateTimeGrain}}
    as | grain |
  >
    {{grain.name}}
  </PowerSelect>
</div>
