<div ...attributes>
  <button type="button" onclick={{toggle "showModal" this}} disabled={{@disabled}}>
    {{yield}}
  </button>
  <NaviModal @isShown={{this.showModal}}>
    <div class="navi-modal-header">
      <h1 class="primary-header">{{this.headerMsg}}</h1>
      <h5 class="secondary-header">
        {{this.warnMsg}}
      </h5>
    </div>
    {{#if this.isDeleting}}
      <NaviLoadingMessage>
        Deleting {{classify this.modelName}}
      </NaviLoadingMessage>
    {{/if}}
    <div class="btn-container">
      <button
        type="button"
        class="btn btn-primary"
        disabled={{this.isDeleting}}
        {{on "click" (pipe (toggle "isDeleting" this) (fn @deleteAction @model) this.closeModal)}}
      >
        Confirm
      </button>
      <button type="button" class="btn btn-secondary" onclick={{toggle "showModal" this}} disabled={{this.isDeleting}}>Cancel</button>
    </div>
  </NaviModal>
</div>