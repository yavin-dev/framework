<button type="button" onclick={{toggle "showModal" this}} disabled={{disabled}}>
  {{yield}}
</button>
{{#navi-modal
  isShown=showModal
}}
  <div class="navi-modal-header">
    <h1 class="primary-header">{{headerMsg}}</h1>
    <h5 class="secondary-header">
      {{warnMsg}}
    </h5>
  </div>
  {{#if isDeleting}}
    {{#navi-loading-message}}
      Deleting {{classify modelName}}
    {{/navi-loading-message}}
  {{/if}}
  <div class="btn-container">
    <button
      class="btn btn-primary"
      {{action (pipe (toggle "isDeleting" this) (action deleteAction model) (action "closeModal"))}}
      disabled={{isDeleting}}
    >
      Confirm
    </button>
    <button class="btn btn-secondary" onclick={{toggle "showModal" this}} disabled={{isDeleting}}>Cancel</button>
  </div>
{{/navi-modal}}
