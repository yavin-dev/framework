<span class='filter-builder__subject'>
    {{displayName}}
    {{#if (has-parameters filter.subject)}}
      {{metric-filter-config
        class='filter-builder__metric-config'
        metric=filter.subject
        request=request
        paramClicked=(update-report-action 'UPDATE_FILTER_PARAM' filter)
      }}
    {{/if}}
</span>
{{#power-select
    class='filter-builder__operator'
    dropdownClass='filter-builder__operator-dropdown'
    options=supportedOperators
    selected=filter.operator
    searchEnabled=false
    tagName='span'
    triggerClass='filter-builder__select-trigger'
    onchange=(action 'setOperator')
    as | operator |
}}
    {{operator.longName}}
{{/power-select}}
<span class='filter-builder__values'>
    {{component
        filter.operator.valuesComponent
        filter=filter
        request=request
        onUpdateFilter=onUpdateFilter
    }}
</span>
