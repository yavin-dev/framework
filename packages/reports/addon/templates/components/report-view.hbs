<div class='report-view__visualization-main {{if (and hasReportRun isEditingVisualization) 'report-view__visualization-main--editor-open'}}'>
    {{#if hasNoData}}
        <div class='report-view__visualization-no-results'>
            No results available.
        </div>
    {{else}}
        <div class='report-view__visualization-header'>
            {{partial 'partials/visualization-toggle'}}
            {{#if hasReportRun}}
                {{#unless isEditingVisualization}}
                    <div class='clickable report-view__visualization-edit-btn' onclick={{action 'toggleEditVisualization' this}}>
                        Edit {{visualizationTypeLabel}}
                        {{navi-icon 'pencil'}}
                    </div>
                {{/unless}}
            {{else}}
                <div class='report-view__info-text'>{{navi-icon 'exclamation-circle'}} Run request to update {{visualizationTypeLabel}}</div>
            {{/if}}
        </div>
        {{report-visualization
            classNames='report-view__visualization'
            report=report
            response=response
            container=this
            annotationData=annotationData
            isEditing=isEditingVisualization
            onUpdateReport=(pipe
                (route-action 'onUpdateReport')
                (route-action 'validate' report)
                (route-action 'runReport' report)
                (route-action 'setHasReportRun' true)
            )
        }}
        {{missing-intervals-warning
          response=response
          onDetailsToggle=(action 'resizeVisualization' warningAnimationDuration)
        }}
    {{/if}}
</div>
{{#if (and isEditingVisualization hasReportRun)}}
    <div class='report-view__visualization-edit-header'>
        <div class='clickable report-view__visualization-edit-btn' onclick={{action 'toggleEditVisualization' this}}> Edit {{visualizationTypeLabel}}
            {{navi-icon 'times'}}
        </div>
    </div>
    {{#scrollbar-wrapper options=(hash suppressScrollX=true) classNames='report-view__visualization-edit'}}
        <div class='report-view__visualization-edit-inner'>
            {{visualization-config/wrapper
                request=report.request
                response=response.rows
                classNames='report-view__visualization-config'
                visualization=report.visualization
                onUpdateConfig=(route-action 'onUpdateVisualizationConfig')
            }}
        </div>
    {{/scrollbar-wrapper}}
{{/if}}
