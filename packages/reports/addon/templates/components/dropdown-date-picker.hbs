<BasicDropdown as |dd|>
  <dd.Trigger class="dropdown-date-picker__trigger">
    {{yield}}
  </dd.Trigger>

  <dd.Content class="dropdown-date-picker__dropdown">
    <NaviDatePicker
      @date={{@date}}
      @dateTimePeriod={{@dateTimePeriod}}
      @onUpdate={{queue @onUpdate dd.actions.close}}
    />
  </dd.Content>
</BasicDropdown>