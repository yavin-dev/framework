<DenaliModal @isOpen={{this.showModal}} @onClose={{this.closeModal}} ...attributes as |modal|>
  <modal.Header>
    <h1 class="primary-header">Save Report As</h1>
  </modal.Header>
  <modal.Content>
    <h5 class="secondary-header">This will create a new report with the new given name.</h5>
    {{!-- input for new Name of the Report --}}
    <DenaliInput
      class="input dashboard-title"
      @placeholder={{this.reportName}}
      @value={{this.reportName}}
      {{on "input" (pipe (pick 'target.value') (fn (mut this.reportName)))}}
    />

    {{!-- Buttons --}}
    <div class="btn-container">
      {{!-- Create a new copy of the report --}}
      <LinkTo @route="reports.report.save-as" @query={{hash title=this.reportName}}
        @tagName="button"
        class="button is-solid save-as__save-as-modal-btn"
      >
        Save
      </LinkTo>
      <DenaliButton class="is-outline save-as__cancel-modal-btn" {{on "click" this.closeModal}}>Cancel</DenaliButton>
    </div>
  </modal.Content>
</DenaliModal>
