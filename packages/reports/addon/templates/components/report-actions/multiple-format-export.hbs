<DenaliMenu class="multiple-format-export" @alignContent="left" ...attributes as |Menu|>
  <Menu.Trigger>
    {{yield}}
  </Menu.Trigger>
  {{#unless @disabled}}
    <Menu.Content>
      {{#each this.exportFormats as |exportFormat|}}
        {{! @report.isNew is falsey with dashboards so this works as expected in dashboards}}
        {{#if (and @report.isNew exportFormat.requiresSaved)}}
          <span class="link has-icon-front is-disabled">
            <DenaliIcon @icon={{exportFormat.icon}} />

            {{exportFormat.type}}
            <EmberTooltip @side="left">
              Save report to enable this option
            </EmberTooltip>
          </span>
        {{else}}
          <DenaliLink
            role="button"
            @iconFront={{exportFormat.icon}}
            {{on "click" (queue (fn this.notify exportFormat.type) (fn this.handleAsync exportFormat (dasherize this.filename)))}}
          >
            {{exportFormat.type}}
          </DenaliLink>
        {{/if}}
      {{/each}}
    </Menu.Content>
  {{/unless}}
</DenaliMenu>
