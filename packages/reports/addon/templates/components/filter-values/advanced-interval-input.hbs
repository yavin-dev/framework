{{#if @isCollapsed}}
  {{#if interval}}
    {{this.dateRange}}
  {{else}}
    <FilterValues::InvalidValue/>
  {{/if}}
{{else}}
  <div class="filter-values--advanced-interval-input" ...attributes>
    <input
      class="filter-values--advanced-interval-input__value"
      value={{this.dateStrings.start}}
      {{on "focusout" (pipe this.parseDate this.setIntervalStart)}}
    >
    <span class="filter-values--advanced-interval-input__separator">to</span>
    <input
      class="filter-values--advanced-interval-input__value"
      value={{this.dateStrings.end}}
      {{on "focusout" (pipe this.parseDate this.setIntervalEnd)}}
    >

    <div class="filter-values--advanced-interval-input__label">
      <a class="filter-values--advanced-interval-input__help" 
        href="http://fili.io/pages/guide/02-end-user-api.html#dates-and-times"
        target="_blank"
        rel="noopener"
      >
        <NaviIcon @icon="life-ring" class="filter-values--advanced-interval-input__icon-documentation" />
        Interval Help
      </a>
    </div>
  </div>
{{/if}}