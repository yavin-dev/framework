{{#if this.isCollapsed}}
  {{#let (as-interval this.filter.values.firstObject) as |interval|}}
    {{#if interval}}
      {{format-interval-inclusive-inclusive interval this.request.logicalTable.timeGrain.name}}
    {{else}}
      <FilterValues::InvalidValue/>
    {{/if}}
  {{/let}}
{{else}}
  <NaviDateRangePicker
    @interval={{as-interval this.filter.values.firstObject}}
    @dateTimePeriod={{this.request.logicalTable.timeGrain.name}}
    @onSetInterval={{action "setInterval"}}
    as |interval|
  >
    <div class="date-range__select-trigger">
      {{#if interval}}
        {{format-interval-inclusive-inclusive interval this.request.logicalTable.timeGrain.name}}
      {{else}}
        <span class="date-range__placeholder">Select date range</span>
      {{/if}}
    </div>
  </NaviDateRangePicker>
{{/if}}