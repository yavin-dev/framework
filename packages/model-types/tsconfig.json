{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": ["ESNext"],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "moduleResolution": "node"
  },
  "include": ["lib", "tests"]
}
